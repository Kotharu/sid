<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.myfirstapp.sid"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.myfirstapp.sid.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.myfirstapp.sid.UpperCase"
            android:label="@string/title_activity_upper_case" >
        </activity>
        <activity
            android:name="com.myfirstapp.sid.LowerCase"
            android:label="@string/title_activity_lower_case" >
        </activity>
        <activity
            android:name="com.myfirstapp.sid.Numbers"
            android:label="@string/title_activity_numbers" >
        </activity>
    </application>

</manifest>
